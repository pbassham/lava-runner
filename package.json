{
  "name": "lava-tester",
  "displayName": "Lava Tester",
  "description": "Execute lava from vscode and see the results!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lava"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lava-tester.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.runLavaFile",
        "title": "Run Lava File"
      },
      {
        "command": "lavaRunner.editConfig",
        "title": "Edit Configuration"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lava Runner Configuration",
      "properties": {
        "lavaRunner.endpoint": {
          "type": "string",
          "default": "",
          "description": "The API endpoint to run Lava files."
        },
        "lavaRunner.apiKey": {
          "type": "string",
          "default": "",
          "description": "The API key for the Lava Runner service."
        },
        "lavaRunner.person": {
          "type": "string",
          "default": "",
          "description": "Person variable for the API call."
        },
        "lavaRunner.group": {
          "type": "string",
          "default": "",
          "description": "Group variable for the API call."
        },
        "lavaRunner.rootUrl": {
          "type": "string",
          "default": "https://rock.ccbcfamily.org",
          "description": "The root URL for resolving relative links in the webview."
      }
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == lava",
          "command": "extension.runLavaFile",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lavaRunnerConfiguration",
          "title": "Lava Runner",
          "icon": "media/lava-icon.svg"
        }
      ]
    },
    "views": {
      "lavaRunnerConfiguration": [
        {
          "id": "lavaRunnerConfigPanel",
          "name": "Configuration",
          "icon": "media/config-icon.svg"
        },
        {
          "id": "lavaRunnerConfigView",
          "name": "Settings",
          "icon": "media/settings-icon.svg"
      }
      ]
    },
    "view/item/context": [
      {
        "when": "view == lavaRunnerConfigPanel && viewItem == configItem",
        "command": "lavaRunner.editConfig",
        "group": "inline"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.7"
  }
}
